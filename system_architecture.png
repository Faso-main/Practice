// System Architecture Diagram
digraph system_architecture {
	rankdir=LR
	fontsize=18 label="System Architecture: ruT5 Classification
(Training and Inference Phases)" labelloc=t overlap=false
	RawData [label="Raw JSON Data
(fake_marked.json)" fillcolor=lightblue shape=box style=filled]
	TrainingScript [label="Python Training Script
(Your Code)" fillcolor=lightgreen shape=box style=filled]
	TrainedArtifacts [label="Trained ruT5 Model &
Tokenizer (Files)" fillcolor=orange shape=cylinder style=filled]
	LabelMapping [label="Label Mapping
(label2id.json)" fillcolor=orange shape=cylinder style=filled]
	TrainingResults [label="Training Results
(CSV, Plot)" fillcolor=yellow shape=note style=filled]
	User [label=User fillcolor=pink shape=person style=filled]
	ReactFrontend [label="React Frontend" fillcolor=lightcyan shape=parallelogram style=filled]
	FastAPIBackend [label="FastAPI Backend" fillcolor=violet shape=box3d style=filled]
	RawData -> TrainingScript [label="Input Data"]
	TrainingScript -> TrainedArtifacts [label="Saves Model/
Tokenizer"]
	TrainingScript -> LabelMapping [label="Saves Mapping"]
	TrainingScript -> TrainingResults [label="Saves Results"]
	User -> ReactFrontend [label="Input Text"]
	ReactFrontend -> FastAPIBackend [label="Send Text
(API Request)"]
	FastAPIBackend -> TrainedArtifacts [label="Loads Model/
Tokenizer" color=blue constraint=false]
	FastAPIBackend -> LabelMapping [label="Loads Mapping" color=blue constraint=false]
	FastAPIBackend -> ReactFrontend [label="Send Result
(API Response)"]
	ReactFrontend -> User [label="Display Result"]
}
